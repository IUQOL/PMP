{% extends 'MainBundle:Master:master.html.twig' %}
{% block content %}
<script language="javascript">
    function SelectorVisibility(){
        var value = $('input:radio[name=idType]:checked').val();
        if (value == 1)
        {
            $( "#grupos" ).show();
            $( "#areas" ).hide();
        }
        else if(value == 2)
        {
            $( "#grupos" ).hide();
            $( "#areas" ).show();
        }
        else
        {
            $( "#grupos" ).hide();
            $( "#areas" ).hide();
        }
        
      
    }
    
   
            
</script>
    
  
 <div class="panel panel-primary">
  <div class="panel-heading">
      <h3 class="panel-title"><span class="badge">-</span> Seleccionar examen </h3>
  </div>
  <div class="panel-body">
    <form action="{{ path("areaExam") }}" method="POST" target="_self" id="Area">
        
        
        <div class="form-group">
            <label for="idTypeExam">Tipo de Examen</label>
            <select class="form-control" id="idTypeExam" name="idTypeExam" required autofocus >
                {%for typeExam in types%}
                    <option value="{{typeExam.id}}">{{typeExam.name}}</option>
                {%endfor%}
            </select>   
        </div>
        
            
        <div class="form-group">
            <label for="idType">Area de profundidad</label>
            <div class="radio">
                    <label>
                        <input type="radio"  name="idType" value="1"  onchange="SelectorVisibility();" >
                        Grupos de proceso
                    </label>
            </div>
            <div class="radio">
                    <label>
                        <input type="radio"  name="idType" value="2" onchange="SelectorVisibility();"  >
                        Areas de Conocimiento
            </label>
            </div>
        </div>    
        
        <div class="form-group" id="grupos" style="display: none">
            <label for="idProccessGroup">Grupo de Proceso</label>
            <select class="form-control" id="idProccessGroup" name="idProccessGroup" required  >
                <option value="-1">Por defecto</option>
                {%for proccess in proceses%}
                    <option value="{{proccess.id}}">{{proccess.name}}</option>
                {%endfor%}
            </select>   
        </div>
        
        <div class="form-group" id="areas" style="display: none">
            <label for="idKnowledgeArea">Area de conocimiento</label>
            <select class="form-control" id="idKnowledgeArea" name="idKnowledgeArea" required  >
                <option value="-1">Por defecto</option>
                {%for area in areas%}
                    <option value="{{area.id}}">{{area.name}}</option>
                {%endfor%}
               
            </select>   
        </div>
        
        
        
        
            
        
            
            
        
        <button class="btn btn-success" type="submit">Crear</button>
              
            
        
    </form>  
        

  </div>
    
</div>  

        

{% endblock content %} 
  