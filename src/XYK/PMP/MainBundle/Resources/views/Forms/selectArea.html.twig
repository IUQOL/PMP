{% extends 'MainBundle:Master:master.html.twig' %}
{% block content %}
 <div class="panel panel-primary">
  <div class="panel-heading">
      <h3 class="panel-title"><span class="badge">-</span> Seleccionar examen </h3>
  </div>
  <div class="panel-body">
    <form action="{{ path("areaExam") }}" method="POST" target="_self" id="Area">
        
        <input type="hidden" name="idTypeExam" value="{{idTypeExam}}"></input>    
        <input type="hidden" name="idType" value="{{idType}}"></input>    
            
            
        
        
        <div class="form-group" id="grupos" >
            <label for="idGroup">{{groupName}}</label>
            <select class="form-control" id="idProccessGroup" name="idGroup" required  >
                {%for group in groups%}
                    <option value="{{group.id}}">{{group.name}}</option>
                {%endfor%}
            </select>   
        </div>
        
        
        
        
        
        
            
        
            
            
        
        <button class="btn btn-success" type="submit">Crear</button>
              
            
        
    </form>  
        

  </div>
    
</div>  

        

{% endblock content %} 
  