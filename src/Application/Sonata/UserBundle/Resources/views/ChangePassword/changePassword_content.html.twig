
{% extends "SonataUserBundle:Profile:action.html.twig" %}

{% block sonata_profile_content %}
    <div class="post-head">
        <div class="starter-template">
            <center>
                <h3>{{ 'sonata_change_password_link' | trans({}, 'SonataUserBundle')}}</h3>
            </center>
        </div>
    </div>
    <div class="col-md-12"><hr></div>
    <div class="container-fluid" style="margin-top:30px">
        <div class="container">
            <div class="panel panel-default">
                
                <div class="panel-body">
                    <form action="{{ path('sonata_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal">
                    {{ form_widget(form, {'show_legend': '0'}) }}
                    <div class="col-sm-offset-3 col-sm-9">
                        <button type="submit" class="btn btn-default "><i class="icon-lock icon-white glyphicon glyphicon-lock"></i>&nbsp;{{ 'change_password.submit'|trans({}, 'FOSUserBundle') }}</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
   
    
    <div class="col-md-12"><hr></div>
{% endblock %}




