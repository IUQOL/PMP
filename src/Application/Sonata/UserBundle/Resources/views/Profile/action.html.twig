{#
Profile manager base template
#}

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}{{main_title}} {%endblock title%}</title>
        {% block scripts %}{% endblock %}
        <!-- Bootstrap core CSS -->
        <link href="{{ asset('bundles/hrksecurity/css/bootstrap.css') }}" rel="stylesheet">
        <!-- Custom styles for this template -->
        <link href="{{ asset('bundles/hrksecurity/css/custom.css') }}" rel="stylesheet"><!-- Custom styles -->
        <!-- Jquery -->
        <script src="{{ asset('bundles/main/js/jquery-1.9.1.js') }}"></script>
    </head>
    <body>
   
    {#Nav Menu#}
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"  aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
            <a href="{{ path('main_homepage') }}" class="navbar-brand"><img src="{{ asset('bundles/hrksecurity/images/hrk-logo.png') }}" alt="logo"></a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            {% if app.request.attributes.get('_route')  == 'sonata_user_profile_show'  %}<li class="active">{% else %}<li>{% endif %}<a href="{{ path('sonata_user_profile_show') }}">{{ "sonata_profile_title" | trans({}, 'SonataUserBundle')}}</a></li>
            {% if app.request.attributes.get('_route') == 'sonata_user_profile_edit' %}<li class="active">{% else %}<li>{% endif %}<a href="{{ path('sonata_user_profile_edit') }}">{{ "sonata_user_profile_breadcrumb_edit" | trans({}, 'SonataUserBundle')}}</a></li>
            {% if app.request.attributes.get('_route')  == 'sonata_user_profile_edit_authentication'  %}<li class="active">{% else %}<li>{% endif %}<a href="{{ path('sonata_user_profile_edit_authentication') }}">{{ "title_user_edit_authentication" | trans({}, 'SonataUserBundle')}}</a></li>
            {% if app.request.attributes.get('_route')  == 'sonata_user_change_password'  %}<li class="active">{% else %}<li>{% endif %}<a href="{{ path('sonata_user_change_password') }}">{{ "sonata_change_password_link" | trans({}, 'SonataUserBundle')}}</a></li>
            {% if app.request.attributes.get('_route')  == 'steeps_info' or app.request.attributes.get('_route')  == 'confirm_cancel' or app.request.attributes.get('_route')  == 'steeps_activate'  %}<li class="active">{% else %}<li>{% endif %}<a href="{{ path('steeps_info') }}">Authenticator</a></li>
          </ul>
          <!-- Links menu right -->
            <ul class="nav navbar-nav navbar-right">
              <li class="dropdown">
                <a href="{{ path('sonata_user_profile_show') }}" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><span style="font-size:16px" class="glyphicon glyphicon-user" aria-hidden="true"> </span> {{ app.user.username }} <span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                  <li><a href="{{ path('fos_user_security_logout') }}"><span class="glyphicon glyphicon-off" aria-hidden="true"></span> Log-out</a></li>
                </ul>
              </li>
             
            </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>
    {#Nav Menu#}
    {% block content %}
    {% endblock %}
    {% block sonata_profile_content '' %}
    
    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    
    <script src="{{ asset('bundles/hrksecurity/js/bootstrap.js') }}"></script>
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="bootstrap/js/ie10-viewport-bug-workaround.js"></script>
    <body>
<html>