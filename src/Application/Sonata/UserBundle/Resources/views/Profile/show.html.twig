{% extends "SonataUserBundle:Profile:action.html.twig" %}

{% block sonata_profile_content %}
   <div class="container-fluid" style="padding:0;">
      <div class="post-head">
      <div class="starter-template">
        <h1>PERFIL DE USUARIO</h1>
        <p class="lead">Administrar datos del usuario</p>
      </div>
      </div>
    </div><!-- /.container -->
    <!-- Separador -->
    <div class="col-md-12"><hr></div>
    
    <div class="container marketing">
    <!-- Three columns of text below the carousel -->
        <div class="row">
          <div class="col-lg-4">
            <center>
                <div class="circle"><i class="glyphicon glyphicon-user"></i></div>
                <h4>Perfil de Usuario</h4>
                <p><a class="btn btn-default" href="{{ path('sonata_user_profile_edit') }}" role="button">{{ 'breadcrumb.link_user_show'|trans({}, 'SonataUserBundle') }} &raquo;</a></p>
            </center>
          </div><!-- /.col-lg-3 -->
          <div class="col-lg-4">
            <center>
                <div class="circle"><i class="glyphicon glyphicon-pencil"></i></div>
                <h4>Autenticación</h4>
                <p><a class="btn btn-default" href="{{ path('sonata_user_profile_edit_authentication') }}" role="button">{{ 'breadcrumb.link_user_show'|trans({}, 'SonataUserBundle') }} &raquo;</a></p>
            </center>
          </div><!-- /.col-lg-3 -->
          <div class="col-lg-4">
            <center>
                <div class="circle"><i class="glyphicon glyphicon-lock"></i></div>
                <h4>Contraseña</h4>
                <p><a class="btn btn-default" href="{{ path('sonata_user_change_password') }}" role="button">{{ 'breadcrumb.link_user_show'|trans({}, 'SonataUserBundle') }} &raquo;</a></p>
            </center>
          </div><!-- /.col-lg-3 -->
         
        </div><!-- /.row -->

    </div>
     
     <div class="col-md-12"><hr></div>   
 

{% endblock %}