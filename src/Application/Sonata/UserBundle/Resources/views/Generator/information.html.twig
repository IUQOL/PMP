{# empty Twig template #}
{% extends "SonataUserBundle:Profile:action.html.twig" %} 
   
{% block scripts %}
          {#<link rel="stylesheet" type="text/css" href="{{ asset('bundles/sonataadmin/vendor/bootstrap/dist/css/bootstrap.min.css') }}">
          <link rel="stylesheet" type="text/css" href="{{ asset('bundles/sonataadmin/vendor/AdminLTE/css/AdminLTE.css') }}">#}
 
{% endblock %}
{% block content %}
    <div class="container-fluid" style="margin:0;padding:0;">
        <div class="post-head">
          <div class="starter-template">
            <center>
                <h3> {{ 'utilities.security.two.info_label'|trans({}, 'LocalizationBundle') }}</h3>
            </center>
          </div>
        </div>
    </div>
    <div class="container">
        <div class="panel panel-default">
            <div class="panel-heading"> <img src="{{ asset('bundles/main/images/settings-ga.png') }}" width="40px" height="40px"></image> {{ 'utilities.security.two.info_title'|trans({}, 'LocalizationBundle') }}</div>
            <div class="panel-body">
                <div class="form-box" id="login-box">
                   <form  method="post" role="form">
                       <div class="body bg-gray">
                           <div class="form-group control-group">
                               <p align="justify">
                                 {{usr}}   {{ 'utilities.security.two.info'|trans({}, 'LocalizationBundle') }}
                               </p>
                               <h3>
                                   {{ 'utilities.security.two.title'|trans({}, 'LocalizationBundle') }}
                               </h3>
                               <p align="justify">
                                   <ol>
                                       <li>
                                          {{ 'utilities.security.two.steep_1'|trans({}, 'LocalizationBundle') }}
                                       </li>
                                       <li>
                                           {{ 'utilities.security.two.steep_2'|trans({}, 'LocalizationBundle') }} <br>
                                           {{ 'utilities.security.two.steep_2a'|trans({}, 'LocalizationBundle') }} <br>
                                           <a href="https://play.google.com/store/apps/details?id=com.google.android.apps.authenticator2" target="_blank">Android  </a>   
                                           <a href="https://itunes.apple.com/en/app/google-authenticator/id388497605" target="_blank">  iOS</a>
                                       </li>
                                       <li>
                                            {{ 'utilities.security.two.steep_3'|trans({}, 'LocalizationBundle') }} <br>
                                       </li>
                                       <li>
                                           {{ 'utilities.security.two.steep_4'|trans({}, 'LocalizationBundle') }} <br>
                                       </li>
                                       <li>
                                           {{ 'utilities.security.two.steep_5'|trans({}, 'LocalizationBundle') }} <br>
                                       </li>
                                   </ol>
                              </p>
                           </div>
                           <div class="form-group control-group"> 
                               <center>
                                   <img style="border: 0; padding:10px" src="{{url}}"/>
                               </center>
                           </div>
                       </div>
                       <div class="footer">
                           <a href="{{ path('sonata_user_profile_show') }}" class="btn btn-primary btn-block">{{ 'utilities.security.two.continue'|trans({}, 'LocalizationBundle') }}</a>
                           <a href="{{ path('confirm_cancel') }}" class="btn btn-danger btn-block">{{ 'utilities.security.two.deactivate'|trans({}, 'LocalizationBundle') }}</a>
                       </div>
                   </form>
               </div>
            </div>
        </div>
    </div>
        

{% endblock %}